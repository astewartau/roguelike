{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "cargo": {
                "args": ["build", "--bin=grid-roguelike", "--package=grid-roguelike"],
                "filter": {
                    "name": "grid-roguelike",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release",
            "cargo": {
                "args": ["build", "--bin=grid-roguelike", "--package=grid-roguelike", "--release"],
                "filter": {
                    "name": "grid-roguelike",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
